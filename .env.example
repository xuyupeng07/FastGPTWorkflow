# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/database_name?directConnection=true

# 数据库Schema配置 - 快速切换数据库schema
# 主要使用的schema (默认: workflow)
DB_SCHEMA=workflow
# 备用schema，当主schema中找不到表时会查找此schema (默认: public)
# DB_FALLBACK_SCHEMA=public

# 常用schema切换示例:
# 使用workflow schema: DB_SCHEMA=workflow
# 使用自定义schema: DB_SCHEMA=your_custom_schema

# 应用配置（前后端合并，统一运行在3000端口）
PORT=3000

# JWT密钥配置（生产环境请使用强密钥）
JWT_SECRET=your_jwt_secret_key_here

# 默认管理员密码（仅用于初始化数据库时创建默认管理员账户）
DEFAULT_ADMIN_PASSWORD=your_admin_password

# 用户注册邀请码
REGISTRATION_INVITE_CODE=your_invite_code

# CORS配置 - 允许的域名（用逗号分隔）
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# 生产环境设置
NODE_ENV=production



# 文件上传配置
UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=public/uploads

# 数据库连接池配置
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=30000

# 健康检查间隔（毫秒）
HEALTH_CHECK_INTERVAL=30000

# 数据查询限制
DATA_QUERY_LIMIT=3000

# 轮播滚动速度配置
NEXT_PUBLIC_CARROUSEL_SCROLL_SPEED_LEFT=8
NEXT_PUBLIC_CARROUSEL_SCROLL_SPEED_RIGHT=8